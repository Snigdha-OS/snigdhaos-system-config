#!/usr/bin/bash
set -e

EXEC_TERMINAL=bash

usage() {
	echo "Usage: ${0##*/} [cmd]"
	echo '    -s [shell]         Change shell to [shell]'
	echo '    -h                 This help'
	exit 1
}

opts='s:h'

while getopts "${opts}" arg; do
	case "${arg}" in
	s) EXEC_TERMINAL="$OPTARG" ;;
	h | ?) usage 0 ;;
	*)
		echo "Invalid Argument '${arg}'!"
		usage 1
		;;
	esac
done
